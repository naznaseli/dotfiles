{
    //--------------------------------------------------
    // file
    //--------------------------------------------------
    "files.encoding": "utf8",
    "editor.cursorStyle": "block",
    "editor.fontFamily": "Yutapon coding Regular",
    "editor.wordWrap": "on",
    "editor.renderControlCharacters": true,
    //! ユーザスニペットを優先表示
    "editor.snippetSuggestions": "top",
    //コードの自動整形
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "[html]": {
        "editor.tabSize": 2
    },
    "[php]": {
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[ruby]": {
        "editor.tabSize": 2
    },
    //--------------------------------------------------
    // workbench
    //--------------------------------------------------
    //! 起動時のエディタ
    "workbench.startupEditor": "none",
    //! タブ上書き禁止
    "workbench.editor.enablePreview": false,
    //--------------------------------------------------
    // vim
    //--------------------------------------------------
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                ";"
            ],
            "after": [
                ":"
            ]
        },
        {
            "before": [
                ":"
            ],
            "after": [
                ";"
            ]
        },
        //! VSCodeのショートカットキーを優先。サイドバーの表示非表示切り替え
        {
            "before": [
                "<C-b>"
            ],
            "commands": [
                "workbench.action.toggleSidebarVisibility"
            ]
        },
    ],
    "vim.cmdLineInitialColon": true,
    "vim.easymotion": false,
    //システムのクリップボードにコピー
    "vim.useSystemClipboard": true,
    //ctrlキーを使った操作が有効になる(vimのキーバインド>VSCodeのショートカット)
    "vim.useCtrlKeys": true,
    //検索結果のハイライト
    "vim.hlsearch": true,
    //--------------------------------------------------
    // git
    //--------------------------------------------------
    "git.ignoreMissingGitWarning": true,
    //--------------------------------------------------
    // latex
    //--------------------------------------------------
    "latex-workshop.latex.autoBuild.run": "never", //保存時コンパイルの無効化
    "latex-workshop.chktex.enabled": true,
    "latex-workshop.latex.recipes": [
        {
            "name": "ptex2pdf",
            "tools": [
                "ptex2pdf"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "args": [
                "-l",
                "-ot",
                "-kanji=utf8 -synctex=1",
                "%DOC%"
            ],
            "command": "ptex2pdf",
            "name": "ptex2pdf"
        }
    ],
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.viewer": "tab",
    "window.restoreWindows": "none",
    "window.zoomLevel": 1,
    "workbench.colorTheme": "Monokai",
    "files.eol": "\n",
    "files.autoGuessEncoding": true,
    "workbench.sideBar.location": "left",
    //--------------------------------------------------
    // terminal
    //--------------------------------------------------
    "terminal.external.windowsExec": "C:\\\\Windows\\\\System32\\\\wsl.exe",
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\wsl.exe",
    "terminal.integrated.shellArgs.windows": "",
    //"terminal.integrated.shell.linux": "wsl",
    //"terminal.integrated.shellArgs.linux": ["~"],
    "terminal.integrated.fontSize": 12,
    //-l:ログインシェルとして起動
    //"terminal.integrated.automationShell.linux": "",
    //"terminal.integrated.shell.osx": "/usr/bin/fish",
    //"terminal.integrated.allowChords": false,
    //"terminal.integrated.commandsToSkipShell": [
    //    //"workbench.action.terminal.focusFindWidget"
    //],
    //--------------------------------------------------
    // exploror
    //--------------------------------------------------
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    //--------------------------------------------------
    // c/c++
    //--------------------------------------------------
    "C_Cpp.updateChannel": "Insiders",
    "task.problemMatchers.neverPrompt": {
        "shell": true
    },
    "C_Cpp.clang_format_style": "Visual Studio",
    "editor.fontLigatures": "null",
    "remote.SSH.remotePlatform": {
        "192.168.179.3": "linux",
        "192.168.75.129": "linux",
        "192.168.75.132": "linux"
    },
    "arduino.path": "C:\\Program Files (x86)\\Arduino",
    "C_Cpp.vcFormat.indent.namespaceContents": false,
    "C_Cpp.vcFormat.indent.preserveComment": true,
    "editor.formatOnType": true,
    "cmake.configureOnOpen": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.fontSize": 12,
    "python.formatting.provider": "yapf",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "workbench.editor.untitled.hint": "hidden",
    //--------------------------------------------------
    // added
    //--------------------------------------------------
}